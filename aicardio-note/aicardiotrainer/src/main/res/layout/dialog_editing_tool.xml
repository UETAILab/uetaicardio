<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_draw_point"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_draw_point" />

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_draw_boundary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_draw_boundary" />

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_measure_length"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_measure_length" />



        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_measure_area"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_measure_area" />

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_04"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_rotation" />



        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_06"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_series" />



        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_08"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_information" />

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_no_action"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_no_action" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal"
        >

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_07"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_contrast" />

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_measure_area" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>



</LinearLayout>