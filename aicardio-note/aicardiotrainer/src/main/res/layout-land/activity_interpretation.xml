<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interpretation.InterpretationActivity">


    <LinearLayout

        android:id="@+id/dicoms_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
>


        <GridView

            android:id="@+id/inter_gv_dicom_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:columnWidth="90dp"

            android:gravity="center"

            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"

            android:numColumns="2"

            android:scrollbars="vertical"

            android:stretchMode="spacingWidthUniform"

            tools:listitem="@layout/item_dicom_preview_small" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/inter_ln_right_tools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_tool_06"
            android:text="X"
            >
        </Button>

        <CheckBox
            android:id="@+id/cb_esv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esv"/>

        <CheckBox
            android:id="@+id/cb_edv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edv" />




