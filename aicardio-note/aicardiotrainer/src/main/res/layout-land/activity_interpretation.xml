        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_interpretation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_no_action" />

        <CheckBox
            android:id="@+id/cb_perimeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/perimeter"/>

        <CheckBox
            android:id="@+id/cb_draw_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="MANUAL"
            android:checked="true" />

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/bt_tool_bull_eye"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_rectangle"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bull_eye" />


    </LinearLayout>


    <com.ailab.aicardiotrainer.interpretation.InterpretationCanvasView

        android:id="@+id/inter_iv_draw_canvas"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/inter_ln_top_tools"
        app:layout_constraintBottom_toTopOf="@id/inter_opencv_tools"
        app:layout_constraintStart_toEndOf="@id/dicoms_layout"
        app:layout_constraintEnd_toStartOf="@id/inter_ln_right_tools"

        >

    </com.ailab.aicardiotrainer.interpretation.InterpretationCanvasView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/inter_ln_frames_file"

        app:layout_constraintBottom_toTopOf="@id/inter_playback"
        app:layout_constraintStart_toEndOf="@id/dicoms_layout"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/inter_rv_frames"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:scrollbars="horizontal"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_frame_dicom" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inter_opencv_tools"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/inter_iv_draw_canvas"
        app:layout_constraintBottom_toTopOf="@id/inter_ln_frames_file"
        app:layout_constraintStart_toEndOf="@id/dicoms_layout"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gamma_correction"
            android:text="1.0"
            android:textColor="@color/red_primary">

        </TextView>

        <SeekBar
            android:id="@+id/inter_seek_bar"
            android:layout_width="700dp"

            android:layout_height="wrap_content"
            android:progress="85"

            android:max="255"
            android:min="0">

        </SeekBar>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/inter_playback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal"

        app:layout_constraintStart_toEndOf="@+id/dicoms_layout"
        app:layout_constraintEnd_toStartOf="@id/inter_ln_right_tools"
        app:layout_constraintBottom_toBottomOf="parent"

       >

        <ImageButton
            android:id="@+id/bt_save_data"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_save" />

        <ImageButton
            android:id="@+id/bt_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_clear" />

        <ImageButton
            android:id="@+id/bt_undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_undo" />

        <ImageButton
            android:id="@+id/bt_begin_frame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_start_frame"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/bt_end_frame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_end_frame"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/bt_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/bt_prev_frame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rewind" />

        <ImageButton
            android:id="@+id/bt_next_frame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next_frame" />

        <ImageButton
            android:id="@+id/bt_next_esv_edv_or_annotation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/custom_image_button"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next_esv_edv" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>