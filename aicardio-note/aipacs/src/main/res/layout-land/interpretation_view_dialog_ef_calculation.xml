<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
            android:id="@+id/iv_draw_canvas_esv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/red" />

        <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
            android:id="@id/iv_draw_canvas_edv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_ok_dialog_ef_calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

        <Button
            android:id="@+id/bt_cancel_dialog_ef_calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>