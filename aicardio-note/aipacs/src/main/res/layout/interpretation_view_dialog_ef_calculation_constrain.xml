<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
        android:id="@+id/iv_draw_canvas_esv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="ESV"
        android:textColor="@color/red"
        android:textFontWeight="@integer/config_navAnimTime"
        />

    <View
        android:id="@+id/view_rule_esv_edv"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_draw_canvas_esv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black"
        >
    </View>


    <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
        android:id="@+id/iv_draw_canvas_edv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_esv_edv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_esv_edv"
        app:layout_constraintRight_toRightOf="parent"
        android:text="EDV"
        android:textColor="@color/red"
        android:textFontWeight="@integer/config_navAnimTime"
        />


    <View
        android:id="@+id/view_rule_esv_edv_02"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_draw_canvas_edv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black"
        >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_esv_edv_02"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bt_ok_dialog_ef_calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

        <Button
            android:id="@+id/bt_cancel_dialog_ef_calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>