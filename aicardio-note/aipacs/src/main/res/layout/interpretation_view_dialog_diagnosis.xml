<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_diagnosis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Please enter dicomDiagnosis" />

    <CheckBox
        android:id="@+id/cb_is_standard_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Bad Image Quality" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewRadioGridGroup
        android:id="@+id/radioGrid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:columnCount="4"
        android:useDefaultMargins="false">

        <RadioButton
            android:id="@+id/rb_wall_hyperactivity"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Hyperactivity"
            android:textColor="@color/colorOrange" />

        <RadioButton
            android:id="@+id/rb_wall_normal_motion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Normal Motion"
            android:textColor="@color/colorGrey" />

        <RadioButton
            android:id="@+id/rb_wall_post_systolic_contraction"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Post Systolic Contraction"
            android:textColor="@color/colorPurple" />

        <RadioButton
            android:id="@+id/rb_wall_hypokinetic_motion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Hypokinetic Motion"
            android:textColor="@color/colorGreen" />

        <RadioButton
            android:id="@+id/rb_wall_akinetic_motion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Akinetic Motion"
            android:textColor="@color/colorYellow" />


        <RadioButton
            android:id="@+id/rb_wall_dyskinetic_motion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Dyskinetic Motion"
            android:textColor="@color/colorRed" />


        <RadioButton
            android:id="@+id/rb_wall_paradoxical_motion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Paradoxical Motion"
            android:textColor="@color/colorBrown" />


        <RadioButton
            android:id="@+id/rb_wall_dyssynchronized_motion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Dyssynchronized Motion"
            android:textColor="@color/colorBlack" />


    </com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewRadioGridGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_chamber_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
                android:id="@+id/iv_diagnosis_2C"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:src="@drawable/label_heart_2c" />

            <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
                android:id="@+id/iv_diagnosis_3C"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:src="@drawable/label_heart_3c" />

            <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
                android:id="@+id/iv_diagnosis_4C"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:src="@drawable/label_heart_4c" />

            <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
                android:id="@+id/iv_diagnosis_pts_l"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:src="@drawable/label_heart_pts_l" />

            <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
                android:id="@+id/iv_diagnosis_pts_s"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:src="@drawable/label_heart_pts_s" />

            <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
                android:id="@+id/iv_diagnosis_no_label"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:src="@drawable/heart_no_label" />

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/heart_sector"
            >
        </ImageView>

        <CheckBox
            android:id="@+id/cb_LAD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="LAD" />

        <CheckBox
            android:id="@+id/cb_LCx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"

            android:text="LCx" />

        <CheckBox
            android:id="@+id/cb_RCA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="RCA" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


    <EditText
        android:id="@+id/et_add_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Note"
        app:layout_constraintTop_toBottomOf="@id/ll_2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/bt_ok_dialog_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

        <Button
            android:id="@+id/bt_cancel_dialog_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>
</LinearLayout>

