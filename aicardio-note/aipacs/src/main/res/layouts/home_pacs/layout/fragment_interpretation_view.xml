<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewFragment">

    <include
        android:id="@+id/ln_editing_tool_01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.08"
        layout="@layout/interpretation_editing_tool"
        >
    </include>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:id="@+id/view_rule_top"
        app:layout_constraintTop_toBottomOf="@+id/ln_editing_tool_01"
        android:layout_height="2dp">
    </View>


    <com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/interpretation_draw_canvas"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_top"
        app:layout_constraintStart_toStartOf="parent"
        >
    </com.uetailab.aipacs.home_pacs.fragment_intepretation.InterpretationViewStudyPreviewCanvasView>


    <View
        android:background="@color/black"
        android:layout_width="2dp"
        android:id="@+id/view_rule_02"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_top"
        app:layout_constraintStart_toEndOf="@+id/interpretation_draw_canvas"
        app:layout_constraintHeight_percent="0.4"
        android:layout_height="0dp">
    </View>

    <include
        android:id="@+id/ln_tool_checkbox"
        layout="@layout/interpretation_checkbox_tool"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/view_rule_02"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_top"
        tools:layout_editor_absoluteY="0dp">

    </include>

    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:id="@+id/view_rule_01"
        app:layout_constraintTop_toBottomOf="@+id/interpretation_draw_canvas"
        android:layout_height="2dp">
    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@+id/view_rule_01"
        android:id="@+id/interpretation_rv_frame_draw_canvas_item"
        tools:listitem="@layout/item_frame_draw_canvas"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <View
        android:id="@+id/view_rule_03"
        android:background="@color/black"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/interpretation_rv_frame_draw_canvas_item"
        android:layout_height="2dp">
    </View>


    <include
        android:id="@+id/ln_playback_tool"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintTop_toBottomOf="@id/view_rule_03"
        layout="@layout/interpretation_playback_tool"
        >
    </include>



    <View
        android:id="@+id/view_rule_04"
        android:background="@color/black"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/ln_playback_tool"
        android:layout_height="2dp">
    </View>

    <GridView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/interpretation_gv_study_preview"
        android:scrollbars="vertical"
        android:gravity="center"
        android:columnWidth="135dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="12dp"
        android:horizontalSpacing="12dp"
        android:stretchMode="spacingWidthUniform"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_rule_04"
        tools:listitem="@layout/fragment_home_item_study_gv_preview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>